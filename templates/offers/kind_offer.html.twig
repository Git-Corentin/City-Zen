{% extends 'base.html.twig' %}

{% block title %}Offres{% endblock %}

{% block stylesheets %}
    <style>
        .document-container {
            text-align: center; /* Centrer les cartes */
            margin-top: 30px;
        }

        .card {
            display: inline-block; /* Changer le display */
            width: 20rem;
            min-height: 26rem;
            transition: box-shadow 0.4s ease; /* Garder l'animation de la boîte */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 15px; /* Ajout d'une marge pour espacer les cartes */
            vertical-align: top; /* Aligner en haut pour éviter des décalages */
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
            padding: 20px;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: bold;
        }

        .card-text {
            min-height: 6rem; /* Hauteur minimale pour aligner les boutons "Prix" */
        }

        .price-info {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: max-height 0.5s ease, opacity 0.5s ease;
            margin-top: 10px;
            margin-bottom: 10px;
            text-align: center;
        }

        /* Affichage de la section de prix */
        .price-info.show {
            max-height: 200px; /* Ajustez cette valeur en fonction du contenu */
            opacity: 1;
        }

        .btn-price-toggle {
            margin-top: 15px;
        }

        .btn-view-offers {
            display: inline-block;
            margin-top: 10px;
            color: #fff;
            background-color: #28a745;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn-view-offers:hover {
            background-color: #218838;
        }
    </style>

{% endblock %}

{% block body %}
    <div class="document-container">
        <!-- Offre Entreprise -->
        <div class="card">
            <img src="{{ asset('homepage/entreprise.jpg') }}" class="card-img-top" alt="Entreprise">
            <div class="card-body">
                <h5 class="card-title">Entreprise</h5>
                <p class="card-text">Offre pour les entreprises qui souhaitent souscrire à un abonnement pour leurs employés.</p>
                <a href="#" class="btn btn-primary btn-price-toggle" onclick="togglePrice(this)">Voir plus</a>
            </div>
            <div class="price-info mt-3">
                <p>À partir de 100€/an par employé</p>
                <a href="/business-offer" class="btn-view-offers">Voir les offres</a>
            </div>
        </div>

        <!-- Offre Particulier -->
        <div class="card">
            <img src="{{ asset('homepage/particulier.jpg') }}" class="card-img-top" alt="Particulier" style="filter: grayscale(100%)">
            <div class="card-body">
                <h5 class="card-title">Particulier</h5>
                <p class="card-text">Offre pour les particuliers qui souhaitent automatiser leurs démarches pour l'expatriation.</p>
                <a href="#" class="btn btn-secondary btn-price-toggle">Voir plus</a>
            </div>
            <div class="price-info mt-3">
                <p>À partir de 100€/an par employé</p>
                <a href="#" class="btn-view-offers">Voir les offres</a>
            </div>
        </div>

        <!-- Offre Étudiant -->
        <div class="card">
            <img src="{{ asset('homepage/étudiant.jpg.avif') }}" class="card-img-top" alt="Étudiant" style="filter: grayscale(100%)">
            <div class="card-body">
                <h5 class="card-title">Étudiant</h5>
                <p class="card-text">Offre spéciale pour les étudiants travaillant à l'étranger.</p>
                <a href="#" class="btn btn-secondary btn-price-toggle">Voir plus</a>
            </div>
            <div class="price-info mt-3">
                <p>À partir de 100€/an par employé</p>
                <a href="#" class="btn-view-offers">Voir les offres</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        function togglePrice(button) {
            const card = button.closest('.card');
            const priceInfo = card.querySelector('.price-info');
            priceInfo.classList.toggle('show');
        }




    </script>
{% endblock %}
