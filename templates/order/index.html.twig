{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Date</th>
                <th>Enfants</th>
                <th>Animal</th>
                <th>Vaccins</th>
                <th>Voiture</th>
                <th>Passeport</th>
                <th>Term</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.lastName }}</td>
                <td>{{ order.firstName }}</td>
                <td>{{ order.date ? order.date|date('Y-m-d') : '' }}</td>
                <td>{{ order.enfants }}</td>
                <td>{{ order.animal }}</td>
                <td>{{ order.vaccins ? 'Yes' : 'No' }}</td>
                <td>{{ order.voiture ? 'Yes' : 'No' }}</td>
                <td>{{ order.passeport ? 'Yes' : 'No' }}</td>
                <td>{{ order.term }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
